<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/lLayoutTransportasi"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="0dp"
    android:elevation="0dp"
    android:padding="8dp"
    android:background="@drawable/bg_item_transportasi"
    android:layout_marginVertical="5dp">
        <ImageView
            android:id="@+id/ivTransportasi"
            android:background="@drawable/bg_loading_img"
            android:layout_width="100dp"
            android:layout_height="104dp"/>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_NamaPengemudi"
                android:text="Nama Pengemudi"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_posisi"
                android:text="Posisi Transportasi"
                android:layout_marginTop="3dp"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_tujuan"
                android:text="Tujuan Transportasi"
                android:layout_marginTop="3dp"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_satus"
                android:layout_marginTop="3dp"
                android:text="Status"
                android:textSize="15sp"
                android:background="@drawable/bg_status_transportsi_blue"
                android:textColor="@android:color/white"
                android:paddingHorizontal="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

</LinearLayout>